{
  "name": "package-template",
  "version": "1.0.1",
  "description": "A template used to create TypeScript packages.",
  "main": "./dist/esm/index.js",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint \"{src}/**/*.{ts,tsx}\" --color --no-error-on-unmatched-pattern",
    "format": "prettier --write \"{src}/**/*.{ts,tsx}\"",
    "test": "jest src --passWithNoTests",
    "test:watch": "npm run test --watchAll",
    "build:cjs": "tsc -p ./tsconfig.json",
    "build:esm": "tsc -p ./tsconfig.module.json",
    "release": "release-it",
    "extract": "formatjs extract -- 'src/**/*.ts*' --ignore='**/*.d.ts' --out-file src/i18n/en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jordanmonier/package-template.git"
  },
  "keywords": [
    "typescript",
    "package"
  ],
  "author": {
    "name": "Jordan Monier",
    "email": "pro.jordan.monier@gmail.com"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jordanmonier/package-template/issues"
  },
  "homepage": "https://github.com/jordanmonier/package-template#readme",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "locales"
  ],
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@formatjs/cli": "^5.1.3",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/big.js": "^6.1.6",
    "@types/jest": "^29.2.3",
    "@types/lodash.mapkeys": "^4.6.7",
    "@types/lodash.orderby": "^4.6.7",
    "@types/lodash.snakecase": "^4.1.7",
    "@types/node": "^18.11.9",
    "@types/validator": "^13.7.10",
    "eslint": "^8.27.0",
    "eslint-config-jordanmonier": "^5.1.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "prettier": "^2.7.1",
    "release-it": "^15.5.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@formatjs/intl": "^2.5.1",
    "big.js": "^6.2.1",
    "dayjs": "^1.11.6",
    "lodash.mapkeys": "^4.6.0",
    "lodash.orderby": "^4.6.0",
    "lodash.snakecase": "^4.1.1",
    "validator": "^13.7.0",
    "yup": "^0.32.11"
  }
}
